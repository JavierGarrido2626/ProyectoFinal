<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5">

    <LinearLayout
        android:id="@+id/linearLayoutAjustes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_anchor="@+id/linearLayoutAjustes"
        app:layout_anchorGravity="center">


        <TextView
            android:id="@+id/textoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Ajustes de Usuario"
            android:textColor="#800080"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCambiarNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/holo_blue_dark"
            android:elevation="6dp"
            android:paddingVertical="12dp"
            android:text="Cambiar Nombre de Usuario"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCambiarContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/holo_blue_dark"
            android:elevation="6dp"
            android:paddingVertical="12dp"
            android:text="Cambiar Contraseña"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEliminarCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#FF3D00"
            android:drawableLeft="@android:drawable/ic_delete"
            android:drawablePadding="8dp"
            android:elevation="12dp"
            android:paddingVertical="12dp"
            android:text="¡Eliminar Cuenta!"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnInicioAjustes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:elevation="6dp"
            android:paddingVertical="12dp"
            android:text="Volver al Inicio"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>