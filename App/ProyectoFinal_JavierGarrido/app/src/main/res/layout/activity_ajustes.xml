<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="381dp"
        android:layout_height="462dp"
        android:layout_margin="16dp"
        android:padding="24dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textoTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:text="Ajustes de Usuario"
                android:textColor="#4CAF50"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCambiarNombreUsuario"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#00A86B"
                android:elevation="8dp"
                android:paddingVertical="12dp"
                android:text="Cambiar Nombre de Usuario"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCambiarCorreo"
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#00A86B"
                android:elevation="8dp"
                android:paddingVertical="12dp"
                android:text="Cambiar Correo"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCambiarContrasena"
                android:layout_width="358dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#00A86B"
                android:elevation="8dp"
                android:paddingVertical="12dp"
                android:text="Cambiar Contraseña"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEliminarCuenta"
                android:layout_width="345dp"
                android:layout_height="53dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#D32F2F"
                android:drawableLeft="@android:drawable/ic_delete"
                android:drawablePadding="10dp"
                android:elevation="12dp"
                android:paddingVertical="12dp"
                android:text="¡Eliminar Cuenta!"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnInicioAjustes"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00A86B"
                android:elevation="8dp"
                android:paddingVertical="12dp"
                android:text="Volver al Inicio"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
