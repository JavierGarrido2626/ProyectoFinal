<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3E5F5"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/title_alarmas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Alarmas"
            android:textColor="#800080"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_alarmas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Presiona el botón para abrir la aplicación de Alarmas."
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_alarmas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@android:color/holo_blue_dark"
            android:padding="16dp"
            android:text="Abrir Alarmas"
            android:textColor="#FFFFFF" />


        <TextView
            android:id="@+id/title_llamadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Llamadas"
            android:textColor="#800080"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_llamadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Presiona el botón para realizar una llamada. Mantén pulsado el botón para ingresar el número."
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_llamadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:padding="16dp"
            android:text="Realizar Llamada"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


