<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.estadisticas.Trabalenguas.EstadisticasJuegoTrabalenguas">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estadísticas del Juego de Trabalenguas"
                android:textSize="20sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:padding="16dp"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/txtFacil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Modo Fácil"
                android:textColor="#424242"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFacil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txtMedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo Medio"
                android:textSize="18sp"
                android:textColor="#424242"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:gravity="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMedio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txtDificil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo Difícil"
                android:textSize="18sp"
                android:textColor="#424242"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:gravity="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewDificil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btnExportar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exportar Estadísticas"
                android:textColor="#FFFFFF"
                android:backgroundTint="#00A86B"
                android:padding="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
