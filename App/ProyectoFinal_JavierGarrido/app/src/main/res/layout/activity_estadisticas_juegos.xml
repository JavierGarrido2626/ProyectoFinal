<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5"
    tools:context="Estadisticas Juegos">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtEstadisticasJuegos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="EstadÃ­sticas de Juegos"
            android:textColor="#800080"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/txtEstadisticasJuegos"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtJuegoContarObjetos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juego de Contar Objetos"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imgbtnJuegoContarObjetos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="16dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/juegocontarobjetos"
                    android:contentDescription="Juego Contar Objetos" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtJuegoColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juego de Colores"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imgbtnJuegoColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="16dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/juegocolor"
                    android:contentDescription="Juego Colores" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtJuegoMemoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juego de Memoria"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imgbtnJuegoMemoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="16dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/juegomemoria"
                    android:contentDescription="Juego Memoria" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtJuegoTrabalenguas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juego de Trabalenguas"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imgbtnJuegoTrabalenguas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="16dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/juegotrabalenguas"
                    android:contentDescription="Juego Trabalenguas" />
            </LinearLayout>

        </GridLayout>

        <Button
            android:id="@+id/btnEstadisticasJuegos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@android:color/holo_blue_dark"
            android:padding="16dp"
            android:text="Volver al Inicio"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gridLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
